<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" thread-count="2" parallel="tests">

    <test name="Chrome Test">
        <parameter name="BROWSER" value="chrome"/>
        <parameter name="URL" value="https://www.facebook.com/"/>
        <classes>
            <class name="testNG_Practices.CrossBrowserSimplify"/>
        </classes>
    </test>

    <test name="Edge Test">
        <parameter name="BROWSER" value="edge"/>
        <parameter name="URL" value="https://paytm.com/"/>
        <classes>
            <class name="testNG_Practices.CrossBrowserSimplify"/>
        </classes>
    </test>

    <test name="Swiggy Test">
        <parameter name="BROWSER" value="chrome"/>
        <parameter name="URL" value="https://www.swiggy.com/"/>
        <classes>
            <class name="testNG_Practices.CrossBrowserSimplify"/>
        </classes>
    </test>

    <test name="Zomato Test">
        <parameter name="BROWSER" value="edge"/>
        <parameter name="URL" value="https://www.zomato.com/"/>
        <classes>
            <class name="testNG_Practices.CrossBrowserSimplify"/>
        </classes>
    </test>
</suite>

